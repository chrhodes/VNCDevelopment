<?xml version="1.0" encoding="utf-8" ?>
<!--
	FA Create Lookup_Lists.xml
	
	This file is used to create the common Lookup lists that are
	used in a FA (crhodes) style SharePoint Site Collection.
	The Lookup lists provide values to several FA_SiteColumns.
	
	NB. It is not possible to specify the Id of a list.  The SiteColumns
		need to query the web for the Id of a lookup list.
	
	Population of the lists is done by a corresponding file,
	FA Populate Lookup_Lists.xml
	-->
<SharePointProvisioning WebUri="http://communities.na.firstam.net/sites/FAITSF" >
	<DeleteLists>
		<!--<List Title="Lookup_FA_ApplicationName" />
		<List Title="Lookup_FA_ArtifactType" />-->		
		<List Title="Lookup_FA_CustomerName" />
		<!--<List Title="Lookup_FA_DRTier" />-->
	</DeleteLists>
	
	<!--
		DisplayName = Visible Name
		Name = Internal Name
		AddFieldOptions enumeration (bit field)
			DefaultValue=0	
			AddToDefaultContentType=1
			AddToNoContentType=2
			AddToAllContentTypes=4
			AddFieldInternalNameHint=8
			AddFieldToDefaultView=16
			AddFieldCheckDisplayName=32
	-->
	<AddLists>
		<!--<List Title="Lookup_FA_ApplicationName" 
			  Description="FA Application Lookup List">
			<Field Name="Description" DisplayName="Description" Description="" Type="Text" AddFieldOptions="24" />
		</List>-->
		
		<!--<List Title="Lookup_FA_ArtifactType"
			  Description="Determines the types of artifacts (documents, pages) that exist on the site.  Enables webpart filtering in lists and libraries.">
			<Field Name="Description" DisplayName="Description" Description="" Type="Text" AddFieldOptions="24" />
		</List>-->

		<List Title="Lookup_FA_CustomerName"
			  Description="FA Customer Lookup List">
			<Field Name="Description" DisplayName="Description" Description="" Type="Text" AddFieldOptions="24" />
		</List>
		
		<!--<List Title="Lookup_FA_DRTier"
			  Description="List of FA Disaster Recovery Tiers">
			<Field Name="Description" DisplayName="Description" Description="" Type="Text" AddFieldOptions="24" />
		</List>-->
	</AddLists>
	
</SharePointProvisioning>

