<UserControl 
    x:Class="VNC.WPF.Presentation.Views.AssemblyInformation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VNC.WPF.Presentation.Views"
    mc:Ignorable="d"
    
    d:DesignWidth="600" d:DesignHeight="300"
>
    <Grid Background="Azure" Margin="2">
        
        <StackPanel Orientation="Vertical" Margin="2">            

            <Label Content="AssemblyInformation" FontWeight="Bold" Margin="0,-5,-5,-3"/>

            <StackPanel Orientation="Horizontal" Margin="-5,-5,0,-5" >
                <Label Content="Name:" Margin="10,0,5,0" />
                <Label Content="{Binding AssemblyInformation.Name}" Foreground="{StaticResource AssemblyInfoText}" />
                <Label Content="Version:"  Margin="10,0,5,0"/>
                <Label Content="{Binding AssemblyInformation.Version}" Foreground="{StaticResource AssemblyInfoText}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="-5,-5,0,-5" >
                <Label Content="FullName:" Margin="10,0,5,0"/>
                <Label Content="{Binding AssemblyInformation.FullName}" Foreground="{StaticResource AssemblyInfoText}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="-5,-5,0,-5" >
                <Label Content="AssemblyTitle:" Margin="10,0,5,0"/>
                <Label Content="{Binding AssemblyInformation.AssemblyTitle}" Foreground="{StaticResource AssemblyInfoText}" />
                <Label Content="AssemblyCompany:" Margin="10,0,5,0" />
                <Label Content="{Binding AssemblyInformation.Company}" Foreground="{StaticResource AssemblyInfoText}"/>
                <Label Content="AssemblyConfiguration:" Margin="10,0,5,0" />
                <Label Content="{Binding AssemblyInformation.Configuration}" Foreground="{StaticResource AssemblyInfoText}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="-5,-5,0,-5" >
                <Label Content="AssemblyCopyright:" Margin="10,0,5,0" />
                <Label Content="{Binding AssemblyInformation.Copyright}" Foreground="{StaticResource AssemblyInfoText}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="-5,-5,0,-5" >
                <Label Content="AssemblyDescription:" Margin="10,0,5,0" />
                <Label Content="{Binding AssemblyInformation.Description}" Foreground="{StaticResource AssemblyInfoText}"/>
            </StackPanel>
            
        </StackPanel>
        
    </Grid>

</UserControl>
