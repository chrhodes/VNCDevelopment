<vncmvvm:ViewBase
    x:Class="VNC.WPF.Presentation.Views.UI1_Beta"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:prism="http://prismlibrary.com/"
    mc:Ignorable="d"
    
    xmlns:views="clr-namespace:VNC.WPF.Presentation.Views"
    
    xmlns:vncmvvm="clr-namespace:VNC.Core.Mvvm;assembly=VNC.Core"
    
    prism:ViewModelLocator.AutoWireViewModel="False"
    
    SizeChanged="thisControl_SizeChanged"
    
    d:DesignWidth="300" d:DesignHeight="300"
>
    <DockPanel Background="LightSeaGreen" Margin="10">

        <views:DeveloperUIInfo x:Name="spDeveloperInfo" DockPanel.Dock="Bottom"/>

        <StackPanel DockPanel.Dock="Top">
            <TextBlock HorizontalAlignment="Center" FontSize="20" Text="UI1 Beta" />
            <TextBlock HorizontalAlignment="Center" Text="ctor() and ctor(VM) - Prism AutoWire False" />
            <TextBlock HorizontalAlignment="Center" Text="" />
        </StackPanel>

        <StackPanel DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal">
                <Label Content="Message:" Width="60" />
                <TextBox Text="{Binding Message}" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="VMessage:" Width="60" />
                <TextBox x:Name="tbVMessage" Text="{Binding VMessage}" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <Button Click="Button_Click" Margin="20" FontSize="20">Zoom One</Button>
        
    </DockPanel>

</vncmvvm:ViewBase>
